{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "server:start"],
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "env": {
        "DEBUG": "genkit:*",
        "DEBUG_COLORS": "true",
        "NODE_ENV": "development",
        "PORT": "8099"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "UI Dev (Vite)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--workspace=ui"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach Chrome to UI (Vite)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8099",
      "webRoot": "${workspaceFolder}/packages/ui",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "vite:///*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "*/src/*": "${webRoot}/src/*"
      }
    }    
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Debug Server","UI Dev (Vite)","Attach Chrome to UI (Vite)"]
    }
  ]  
}