{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "packages/server/src/index.ts"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**",
                    "node_modules/**"],
      "sourceMaps": true,
    
      "outFiles": ["${workspaceFolder}/**/*.js"],
    }
  ]
}